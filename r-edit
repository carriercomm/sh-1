#!/bin/sh
c_editor='vim'
g_editor='gvim -f -geometry 80x40'

if [ -n "$1" -a  "$1" = "-b" ] ; then
    background=1
    shift
fi

if [ -n "$XAUTHORITY" -o -n "$DISPLAY" ] ; then
    if [ -n "$background" ] ; then
        $g_editor "$@" &
    else
        exec $g_editor "$@"
    fi        
else
   echo exec $c_editor "$@"
fi

