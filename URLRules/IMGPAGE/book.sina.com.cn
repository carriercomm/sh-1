#!/bin/bash
#Rules for book.sina.com.cn
#-P http://book.sina.com.cn/nzt/lit/wodemingzijiaohong/index.shtml
#Created by xiaoranzzz
#Date: Fri Mar  7 05:43:14 CST 2008

filter() {
    bookurl="$1"
    bookname=`dirname "$bookurl"`
    bookname=`basename "$bookname"`
    htmllink "$1" | grep "$bookname\/.*html$"
    return $?
}
URL=$1
if [ -z "$URL" ] ; then
    filter
else
    netcat -u "$URL" | filter "$URL"
fi
